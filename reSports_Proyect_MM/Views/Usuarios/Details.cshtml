@model reSports_Proyect_MM.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<div class="p-2" style="background-color:white; border-radius:10px">
    <h1>Detalles Usuario</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <span>Nombre Usuario</span>:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            <span>Nombre Completo</span>:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero):
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Genero == "0")
            {
                <span>Masculino</span>
            } else
            {
                <span>Femenino</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edad):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edad)
            <span> Años</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Experiencia):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Experiencia)
            <span> Años</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posicion):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posicion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rol):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RolNavigation.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipo):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipo.Nombre)
        </dd>
    </dl>
    <div class="mt-3 mb-3">
        <a class="btn btn-primary btn" style="background-color:#1089e4;" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
