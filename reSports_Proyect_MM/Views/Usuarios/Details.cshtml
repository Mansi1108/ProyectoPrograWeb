@model reSports_Proyect_MM.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <span>Nombre Usuario</span>:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            <span>Nombre Completo</span>:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero):
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Genero == "0")
            {
                <span>Masculino</span>
            } else
            {
                <span>Femenino</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edad):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edad)
            <span> Años</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Experiencia):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Experiencia)
            <span> Años</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posicion):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posicion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rol):
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Rol == 1)
            {
                <span>Jugador</span>
            }
            else if (Model.Rol == 2)
            {
                <span>Entrenador</span>
            } else
            {
                <span>Support</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipo):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EquipoId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
