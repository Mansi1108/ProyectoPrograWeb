@model IEnumerable<reSports_Proyect_MM.Models.Equipo>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center">
    <div class=" justify-content-start p-3" style=" background-color:white; border-radius: 10px; width: 33%;">
        <h1>Listado de Equipos</h1>
    </div>
    <div>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Create","Equipoes")" style="background-color:#1089e4;">Crear Nuevo</a>
    </div>
</div>

<div class="container-sm mt-2 p-3" style="background-color:#1089e4; border-radius: 10px;">
    <div class="col-6 text-center mx-auto">
        <table class="table" style="color: #FFFF;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Genero)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @if ((item.Genero) == 1)
                            {
                                <span>Femenino</span>
                            }
                            else
                            {
                                <span>Masculino</span>
                            }
                        </td>
                        <td style="color:#FFFF">

                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@style="color:#FFFF;" }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id}, new {@style="color:#FFFF;" }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id}, new {@style="color:#FFFF;" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>    
    </div>

    

</div>

