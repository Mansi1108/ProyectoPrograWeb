@model reSports_Proyect_MM.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipo: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input  readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <span >
                Masculino: @Html.RadioButton("GeneroAux","Masculino")
            </span>
            <span>
                Femenino:@Html.RadioButton("GeneroAux","Femenino")
            </span>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Confimar Cambios" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Volver a Lista Equipos", "Index")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
