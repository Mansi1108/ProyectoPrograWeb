@model reSportsModel.EquipoM

@{
    ViewData["Title"] = "Details";
}

<div class="p-2" style="background-color:white; border-radius:10px">
    <h1>Detalles Equipo</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Genero == 0)
            {
                <span>Masculino</span>
            }
            else
            {
                <span>Femenino</span>
            }
        </dd>
    </dl>
    <div class="mt-3 mb-3">
        <a class="btn btn-primary btn" style="background-color:#1089e4;"  asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
